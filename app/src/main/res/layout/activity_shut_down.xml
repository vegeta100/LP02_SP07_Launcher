<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3"
    android:orientation="vertical"
    android:paddingLeft="20px">

    <LinearLayout
        android:id="@+id/llBox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:orientation="vertical"
        android:paddingLeft="20px">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:focusable="false"
            android:text="关机"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10px"
            android:background="#b4b4b4" />

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36px"
            android:focusable="true"
            android:gravity="center_vertical"
            android:nextFocusDown="@id/layout2"
            android:nextFocusLeft="@id/layout1"
            android:nextFocusRight="@id/layout1"
            android:nextFocusUp="@id/layout1"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="110px"
                android:layout_height="70px"
                android:layout_marginLeft="60px"
                android:focusable="false"
                android:src="@null" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:focusable="false"
                android:gravity="center_vertical"
                android:text="关机"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22px"
            android:focusable="true"
            android:gravity="center_vertical"
            android:nextFocusDown="@id/layout2"
            android:nextFocusLeft="@id/layout2"
            android:nextFocusRight="@id/layout2"
            android:nextFocusUp="@id/layout1"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="110px"
                android:layout_height="70px"
                android:layout_marginLeft="60px"
                android:focusable="false"
                android:src="@null" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:focusable="false"
                android:gravity="center_vertical"
                android:text="蓝牙音箱模式"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36px"
            android:focusable="true"
            android:gravity="center_vertical"
            android:nextFocusDown="@id/layout4"
            android:nextFocusLeft="@id/layout3"
            android:nextFocusRight="@id/layout3"
            android:nextFocusUp="@id/layout3"
            android:orientation="horizontal"
       >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="110px"
                android:layout_height="70px"
                android:layout_marginLeft="60px"
                android:focusable="false"
                android:src="@null" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:focusable="false"
                android:gravity="center_vertical"
                android:text="@string/cancel"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22px"
            android:focusable="true"
            android:gravity="center_vertical"
            android:nextFocusDown="@id/layout4"
            android:nextFocusLeft="@id/layout4"
            android:nextFocusRight="@id/layout4"
            android:nextFocusUp="@id/layout3"
            android:orientation="horizontal"
        >

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="110px"
                android:layout_height="70px"
                android:layout_marginLeft="60px"
                android:focusable="false"
                android:src="@null" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:focusable="false"
                android:gravity="center_vertical"
                android:text="@string/ok"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>






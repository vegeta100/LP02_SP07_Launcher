<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:background="@null"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/network" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:text="网络设置" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="500dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_grey">

        <TextView
            android:id="@+id/wifi_img"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20px"
            android:layout_centerVertical="true"
            android:background="@drawable/selected"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="WIFI"
            />

        <TextView
            android:id="@+id/hotspot"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/wifi_img"
            android:background="@drawable/blackbox"
            android:gravity="center"
            android:text="便携式热点" />

        <TextView
            android:id="@+id/ethernet"
            android:layout_width="58dp"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/hotspot"
            android:background="@drawable/blackbox"
            android:gravity="center"
            android:text="以太网" />

        <TextView
            android:id="@+id/mybluetooth"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/ethernet"
            android:background="@drawable/blackbox"
            android:gravity="center"
            android:text="蓝牙" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:background="@null"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/commonSettingsImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/commonsettings" />

        <TextView
            android:id="@+id/commonSettingsTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:text="常用设置" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_grey">

        <TextView
            android:id="@+id/voice"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/blackbox"
            android:layout_marginLeft="20px"
            android:layout_marginTop="40px"
            android:gravity="center"
            android:text="声音" />

        <TextView
            android:id="@+id/brightness"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/blackbox"
            android:layout_alignTop="@+id/voice"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/voice"
            android:gravity="center"
            android:text="亮度" />

        <TextView
            android:id="@+id/keyboardandinput"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/blackbox"
            android:layout_alignTop="@+id/brightness"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/brightness"
            android:gravity="center"
            android:text="键盘和输入法" />

        <TextView
            android:id="@+id/language"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="@drawable/blackbox"
            android:layout_alignTop="@+id/keyboardandinput"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/keyboardandinput"
            android:gravity="center"
            android:text="语言" />

        <TextView
            android:id="@+id/timeanddate"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/voice"
            android:layout_alignParentBottom = "true"
            android:gravity="center"
            android:layout_marginBottom="40px"
            android:background="@drawable/blackbox"
            android:text="时间和日期" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/brightness1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@null"
            android:focusable="true"
            android:src="@drawable/brightness" />

        <ImageView
            android:id="@+id/wifi1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5px"
            android:layout_toRightOf="@+id/brightness1"
            android:background="@null"
            android:focusable="true"
            android:src="@drawable/wifi" />

        <ImageView
            android:id="@+id/advancesettings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5px"
            android:layout_toRightOf="@+id/wifi1"
            android:background="@null"
            android:focusable="true"
            android:src="@drawable/advancesetting" />

        <ImageView
            android:id="@+id/language1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5px"
            android:layout_toRightOf="@+id/advancesettings"
            android:background="@null"
            android:focusable="true"
            android:src="@drawable/language" />

        <ImageView
            android:id="@+id/display"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/brightness1"
            android:layout_marginTop="5px"
            android:background="@null"
            android:focusable="true"
            android:src="@drawable/displaysettings" />

        <ImageView
            android:id="@+id/bt"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/brightness1"
            android:layout_marginLeft="5px"
            android:layout_marginTop="5px"
            android:layout_toRightOf="@+id/display"
            android:background="@null"
            android:focusable="true"
            android:src="@drawable/bt" />

        <ImageView
            android:id="@+id/backup"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/brightness1"
            android:layout_marginLeft="5px"
            android:layout_marginTop="5px"
            android:layout_toRightOf="@+id/bt"
            android:background="@null"
            android:focusable="true"
            android:src="@drawable/backup" />

        <ImageView
            android:id="@+id/about"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/brightness1"
            android:layout_marginLeft="5px"
            android:layout_marginTop="5px"
            android:layout_toRightOf="@+id/backup"
            android:background="@null"
            android:focusable="true"
            android:src="@drawable/about" />

    </RelativeLayout>
</LinearLayout>





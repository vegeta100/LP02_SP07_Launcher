<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="horizontal" >
    
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/airplay"
            android:layout_width="129px"
            android:layout_height="164px"
            android:background="@null"
            android:focusable="true"
            android:scaleType="fitXY"
            android:src="@drawable/apy" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:text="AirPlay"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/wfd"
            android:layout_width="129px"
            android:layout_height="164px"
            android:background="@null"
            android:focusable="true"
            android:scaleType="fitXY"
            android:src="@drawable/wfd" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:text="WifiDisplay"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
    </LinearLayout>
    
  <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/eshare"
            android:layout_width="129px"
            android:layout_height="164px"
            android:background="@null"
            android:focusable="true"
            android:scaleType="fitXY"
            android:src="@drawable/es" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:text="EShare"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
    </LinearLayout>


</LinearLayout>
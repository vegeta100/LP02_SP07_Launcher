<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageSwitcher
        android:id="@+id/imageSwitcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ImageSwitcher>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_left"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15px"

        android:focusable="true"

        android:nextFocusUp="@id/imageView1"
        android:nextFocusDown="@id/imageView1"
        android:nextFocusLeft="@id/imageView1"
        android:nextFocusRight="@id/imageView2"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15px"

        android:focusable="true"

        android:nextFocusUp="@id/imageView2"
        android:nextFocusDown="@id/imageView2"
        android:nextFocusLeft="@id/imageView1"
        android:nextFocusRight="@id/imageView2"
        />
</RelativeLayout>